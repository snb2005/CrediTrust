{
  "name": "creditrust",
  "version": "1.0.0",
  "description": "CrediTrust - Autonomous Risk-Based Microcredit Protocol with React Frontend",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network base-sepolia",
    "test": "hardhat test",
    "node": "hardhat node",
    "backend": "cd backend && python app.py",
    "agent": "node scripts/agent_watch.js",
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "dev": "npm run frontend:dev",
    "build": "npm run compile && npm run frontend:build"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^4.9.3",
    "dotenv": "^16.5.0",
    "ethers": "^6.7.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20",
    "hardhat": "^2.17.2",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.13",
    "typechain": "^8.3.2"
  },
  "keywords": [
    "defi",
    "microcredit",
    "cdp",
    "x402pay",
    "agentkit",
    "chainlink"
  ],
  "author": "CrediTrust Team",
  "license": "MIT"
}
